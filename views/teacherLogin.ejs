<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>teacher login</title>
  </head>
  <body>
    <nav class="navbar navbar-light"  style="background-color: rgb(41, 180, 133);">
        <!-- Navbar content -->
        <div class="text-center mt-1 ms-2">
          <img src="CBSE-Black.png" height="50px">
        </div>
        <div class="mx-auto">
            <h3  style="color:rgb(12, 11, 11);"><b>Result Managment System</b></h3>
        </div>
        
    </nav>

    <main>
        <div style="margin-top: 30px; margin-left: 10px;">
            <a href="/" ><button type="button" class="btn btn-warning">Go Back</button></a>
        </div>

       
        <div class="container mt-2 "  >

            <div class="row">
                <div class="col-8 offset-md-4">

                    <div class="card" style="width: 26rem;">
                        <div class="card-header text-center">
                          <b>LOGIN HERE</b>
                        </div>
                        <div class="card-body">
                            <form action="/teacher/login" method="post">
                                <div class="mb-3">
                                  <label for="email" class="form-label"><b>Email address</b></label>
                                  <input type="email" required email class="form-control" id="email" name="email" aria-describedby="emailHelp">
                                  <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                                </div>
                                <div class="mb-3">
                                  <label for="password" class="form-label"><b>Password</b></label>
                                  <input type="password" required class="form-control" id="password" name="password">
                                </div>
                                <div class="mb-3 form-check">
                                  <input type="checkbox" required class="form-check-input" id="exampleCheck1">
                                  <label class="form-check-label" for="exampleCheck1"><small>Check me out</small></label>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-outline-success">Submit</button>
                                    <button type="reset" class="btn btn-outline-danger">Reset</button>
                                </div>
                               
                              </form>
                        </div>
                        <div class="card-footer text-muted">
                          <span><i>Have A Nice Day </i></span>
                        </div>
                      </div>
    
                </div>
            </div>
            

        </div>

    </main>


  </body>
</html>