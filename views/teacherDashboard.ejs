<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Dashboard</title>
</head>
<body>
    <nav class="navbar navbar-light"  style="background-color: rgb(41, 180, 133);">
        <!-- Navbar content -->
        <div class="text-center mt-1 ms-2">
          <img src="CBSE-Black.png" height="50px">
      </div>
        <div class="mx-auto">
            <h3  style="color:rgb(12, 11, 11);"><b>Result Managment System</b></h3>
        </div>
        
        <div class="me-2">
          <a href="/teacher/logout"><button type="button" class="btn btn-danger btn-sm">Logout</button></a>
      </div>
    </nav>



    <div class="container" style="margin-bottom: 10px;margin-top: 50px;">
        <div class="row">
            <div class="col-8 text-center " style="margin-left: 10px;">
                <h3 style="margin-left: 400px;">Students Record</h3>
            </div>
            <div class="col-2" style="margin-left: 150px;">
                <a href="/teacher/addstudent">
                <button class="btn btn-outline-primary" type="submit">Add Student</button>
                </a>
            </div>
    
        </div>
    </div>

    <div class="container">
        <b>Total <%=students.length%> students</b>
        <table class="table table-bordered table-striped mt-3">
          <thead>
          <tr>
            <th>Roll Nubmer</th>
            <th>Name</th>
            <th>D.O.B</th>
            <th>Score</th>
            <th>Actions</th>
            
          </tr>
          </thead>
          <tbody>
              <%
                students.forEach(element=>{
                    %>
                    <tr>
                        <td><span><%=element.rollnumber%></span></td>
                        <td><span><%=element.fullname%></span></td>
                        <td><span><%=element.dob%></span></td>
                        <td><span><%=element.score%></span></td>
                        <td>
                           <a href="/teacher/editstudent/<%=element.rollnumber%>"><button  class="btn btn-sm btn-warning">
                              <i class="fa fa-edit"></i>Edit</button></a>

                            <a href="/teacher/deletestudent/<%=element.rollnumber%>"><button  style="margin-left: 5px;" class="btn btn-sm btn-danger">
                              <i class="fa fa-remove"></i>Delete</button></a>
                        </td>
                        
                      </tr>
                    <%
                })
                %>
          
          </tbody>
        </table>
      </div>

      

</body>
</html>