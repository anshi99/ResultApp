<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Dashboard</title>
</head>

<body>
    <nav class="navbar navbar-light"  style="background-color: rgb(41, 180, 133);">
        <!-- Navbar content -->
        <div class="text-center mt-1 ms-2">
          <img src="CBSE-Black.png" height="50px">
      </div>
        <div class="mx-auto">
            <h3  style="color:rgb(12, 11, 11);"><b>Result Managment System</b></h3>
        </div>
        
        <div class="me-2">
          <a href="/teacher/logout"><button type="button" class="btn btn-danger btn-sm">Logout</button></a>
      </div>
    </nav>

<div style="margin-top: 30px; margin-left: 10px;">
    <a href="/teacher/teacherDashboard" ><button type="button" class="btn btn-warning">Go Back</button></a>
</div>
<main class="primary-background banner-background"
		style="padding-bottom: 90px;padding-top: 15px;">
	<div class="container">
		
		<div class="col-md-6 offset-md-3">
			<!-- register card -->
			<div class="card">
				<div class="card-header text-center ">
					<span class="fa fa-user-plus fa-3x"></span><br> <b>Add Student </b>
				</div>

				<div class="card-body">
					<form action="/teacher/addstudent"  method="POST">
						
						<div class="form-group" style="margin-top: 5px;">
							<label for="Email1"><b>Roll Number</b></label> 
                            <input style="margin-top: 5px;" type="text"
								class="form-control" 
								 placeholder="enter student roll number"
								required  name='rollnumber'>
						</div>
						<div class="form-group" style="margin-top: 5px;">
							<label for="Name"><b>Name</b></label> <input style="margin-top: 5px;" type="text"
								class="form-control" id="Name"
								placeholder="enter student name" required="required" name='fullname'>
						</div>
						<div class="form-group"  style="margin-top: 5px;">
							<label for="Password1"><b>Date of Birth</b></label>
                             <input style="margin-top: 5px;" type="date"
								class="form-control"
								placeholder="dd-mm-yyyy" required name='dob'>
						</div>
						
						<div class="form-group"  style="margin-top: 5px;">
							<label for="Password1"><b>Score</b></label> 
                            <input style="margin-top: 5px;" type="number"
								class="form-control"
								placeholder="enter score obtained by student" required name='score'>
						</div>
                        <div style="margin-top: 10px; text-align: center;">
                            <button id="button1" type="submit" class="btn btn-primary">Add</button>
                            <button type="reset" class="btn btn-danger" style="margin-left: 6px;">Clear</button>
                        </div>
						



					</form>

				</div>


			</div>



		</div>
	</div>
	</main>


    

</body>